
@{
    Layout = null;
}

@using ProyectoBiblioteca.Models





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <style>
    </style>
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">


                            <div class="col-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido al sitema de Biblioteca de la UACA</h1>
                                    </div>
                                    <form class="user" action="@Url.Action("Index", "Login")" method="post" @Model>

                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" name="correo" placeholder="Email" value="admin@admin.com">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" name="clave" placeholder="Password" value="123">
                                        </div>
                                        <div class="form-group">
                                            @{if (ViewBag.Error != null)
                                                {

                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error

                                                    </div>
                                                }
                                            }


                                        </div>
                                        <button class="btn btn-primary btn-block btn-user" type="submit">Ingresar</button>

                                    </form>
                                    <hr>
                                    <div class="text-center justify-content-center">
                                        <p class="text-primary mb-0">Libreria &copy;<a href="https://uvirtual.uaca.ac.cr/" target="_blank" class="text-success ml-1"><b>Universidad Autonoma De Centro America</b></a></p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6">
                                <img src="@Url.Content("~/Imagenes/book.png")" style="width: 500px;height: 500px;" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



   

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
